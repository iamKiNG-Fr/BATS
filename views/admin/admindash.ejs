<!DOCTYPE html>
<html lang="en">
<%- include('../partials/adminHead.ejs') %> 
<body>
    <%- include('../partials/adminNav.ejs') %>
    <div class="dashboard">
        
        <div class="info">
            <div class="top">
                <div class="box">
                    <p>Alumni Requests</p>
                    <h3>00</h3>
                </div>
                <div class="box">
                    <p>Unread Messages</p>
                    <h3>00</h3>
                </div>
                <div class="box">
                    <p>Media Requests</p>
                    <h3>00</h3>
                </div>
            </div>
            <div class="bottom">
                <div class="left">
                    <div class="top box">
                        <p>Registered Alumni</p>
                        <h3><%= regAlumniNum %></h3>
                    </div>
                    <div class="down box">
                        <p>Alumni in</p>
                        <h3><%= regCountriesNum %></h3>
                        <p>countries</p>
                    </div>
                </div>
                <div class="right">
                    <p>Alumni Analytics</p>
                    <div class="chart">
                        <canvas id="myChart">brrooo</canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="recently-added">
            <h2>Recently added</h2>
            <div class="recent-table">
                <div class="tablehead">
                    <div class="th"><p>First Name</p></div>
                    <div class="th"><p>Last Name</p></div>
                    <div class="th"><p>Set</p></div>
                    <div class="th"><p>Occupation</p></div>
                    <div class="th"><p>E-mail</p></div>
                    <div class="th">Action</div>
                </div>

                <% if (alumni.length > 0) { %>
                    
                    <% for( let i = 0; i < 5; i++ ) { %>
                        <div class="searchresult">
                            <div class="td"><p><%= alumni[i].first_name %></p></div>
                            <div class="td"><p><%= alumni[i].last_name %></p></div>
                            <div class="td"><p><%= alumni[i].mascot %></p></div>
                            <div class="td"><p><%= alumni[i].occupation %></p></div>
                            <div class="td"><p><%= alumni[i].email %></p></div>
                            <div class="td"><a href="/alumni/<%= alumni[i].uuid %>">View More...</a></div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('../partials/adminFooter.ejs') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.2.1/chart.umd.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js"></script>
    <script type="module" src="/js/charts.js" defer></script>
</body>
</html>