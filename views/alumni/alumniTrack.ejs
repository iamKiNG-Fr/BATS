<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title> <%-title %></title>
        <link rel="stylesheet" type="text/css" href="/css/alumnistyle.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js" integrity="sha512-LUKzDoJKOLqnxGWWIBM4lzRBlxcva2ZTztO8bTcWPmDSpkErWx0bSP4pdsjNH8kiHAUPaT06UXcb+vOEZH+HpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="/js/alumniTrack.js" defer></script>
        <script src="/js/map.js" defer></script>
    </head>
<body>
    <%- include('../partials/alumniNav.ejs') %>
    
    <div class="main">

        <div class="search">
            <form action="/alumni/search" method="GET">
                <div>
                    <div class="search-area">
                        <input type="search" name="search" id="search" placeholder="Search Alumni..." onfocus="displayFilter()" onblur="removeFilter()">
                        <button type="submit" class="search-btn">ðŸ”Ž</button>
                    </div>
                    <div class="search_filter">
                        <label>Search by:</label>
                        <div class="filter">
                            <div>
                                <input type="checkbox" name="filter" id="fname" value="first_name" checked>
                                <label for="fname">First Name</label>
                            </div>
                            <div>
                                <input type="checkbox" name="filter" id="lname" value="last_name">
                                <label for="lname">Last Name</label>
                            </div>
                            <div>
                                <input type="checkbox" name="filter" id="lname" value="grad_year">
                                <label for="lname">Grad. Year</label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            
            <div class="mapandstats">
                <div id="map"></div>
    
                <div class="genStats">
                    <a href="/alumni/search/all" class="stat-card">
                        <p>Number of <br> <span class="kw">Registered Alumni</span></p>
                        <h3><%= userNum %></h3>
                    </a>
                    <a href="/alumni/search/nigeria" class="stat-card">
                        <p>Registered Alumni in <br> <span class="kw">Nigeria</span></p>
                        <h3><%= alumniNGNum %></h3>
                    </a>
                    <a href="/alumni/search/diaspora" class="stat-card">
                        <p>Registered Alumni in <br> <span class="kw">Diaspora</span></p>
                        <h3><%= alumniDiasNum %></h3>
                    </a>
                    <a href="/alumni/search/vacancy" class="stat-card"> 
                        <p>Number of available <br> <span class="kw">Job Vacancies</span></p>
                        <h3><%= vacancyNum %></h3>
                    </a>
                </div>
            </div>
            
        </div>

    </div>

    <%- include('../partials/alumniFooter.ejs') %>
    
    <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDV69k72qfUuFQhH-SMAksXBjPXrGMOVYE&callback=initMap" defer></script>
    <script
    src="" defer></script>
</body>
</html>

